<!DOCTYPE html>
<html>
	<head>
		<title>OnixOverFlow</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		
	</head>

	<body>
		 <nav class="navbar navbar-inverse">
			<div class="container-fluid">
				<div class="navbar-header">
						<a class="navbar-brand" href="/">OnixOverFlow</a>
				</div>
				<ul class="nav navbar-nav">
						<li class="active"><a href="/">Home</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
					<%= form_tag '/', method: :get do %>              
								<%= text_field_tag :question, params[:question],  placeholder: "Buscar Pregunta" %>
													
							<button class="btn btn-default" type="submit">
								<i class="glyphicon glyphicon-search"></i>
							</button>
				<% end %>
				</li>
			<% unless user_signed_in?%>
				<li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
					<li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
				<% else%>       
					<li><%= link_to destroy_user_session_path, method: :delete do %>
							<span class="glyphicon glyphicon-log-out">
								Logout 
							</span>
						<% end %>             
					</li>
					<%end %>
				</ul>
			</div>
	</nav>  
		<div class="container"> 
		<%= yield %>
		</div>
	</body>
</html>
